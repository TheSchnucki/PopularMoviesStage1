<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/poster_Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/release_date_label_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_release_date_label"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/release_date_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vote_average_label_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_vote_average_label"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vote_average_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/overview_label_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_overview_label"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/overview_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>